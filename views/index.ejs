<div> <!-- Front -->
    <div class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
          <div class="col-10 col-sm-8 col-lg-6">
            <img src="/images/home.jpg" class="d-block mx-lg-auto img-fluid  shadow p-3 mb-5 bg-body-tertiary rounded" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
          </div>
          <div class="col-lg-6">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Study Hub</h1>
            <p class="lead">We provides a platform where you can download and upload various type of notes for you friends prepaire for End sem's</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
              <a href="#upload"><button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Upload Notes</button></a>
              <button type="button" class="btn btn-outline-secondary btn-lg px-4">Find Notes</button>
            </div>
          </div>
        </div>
      </div>
      <div class="b-example-divider"></div>

    </div>

<div class="py-5"><!-- notes -->
  <p class="h1 text-center ">Notes </p>
  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center ms-5">
   <% let count=0; for( let post of docs){ %>
   <% count++;  if(count>6){ break;}%>
    <div class="col ">   
      <div class="card mb-4 rounded-3 shadow-sm shadow-lg p-3 mb-5 bg-body-tertiary rounded " style="width: 18rem;">
          <img src="/images/home.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"> <%= post.name %>  </h5>
            <p class="card-text"><%=  post.discription %> <br>
              </p>
            <a href="/home/notes/<%=post.id%>" class="btn btn-primary">Download</a>
          </div>
        </div>
    </div>
  
    <% } %>
  
  </div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-primary" type="button"> <a href="/home/notes" style="text-decoration: none; color: white;"> Show more </a> </button>

  </div>


</div>    

<div id="upload"> <!-- upload -->
  <div class="b-example-divider"></div>
  <div class="" >
    <!-- style="width: 50rem; margin: 2rem 15rem" for line 101 -->
   
    <form action="/home" enctype="multipart/form-data" method="post" class="card rounded-3 shadow-sm shadow-lg bg-body-tertiary rounded px-5">
      <h1 class="text-center pt-3">Upload notes</h1>
      <h3 class="my-3">Name</h3><input type="text" name="name" id="" >
      <h3 class="my-3">Discription</h3> <textarea name="discription" id="" cols="30" rows="10"></textarea><br>
      <input type="file" name="file" id=""><br>
      <button type="submit" class="btn btn-primary my-3">Submit</button>
   
    </form>
  </div>
</div>

<div class="py-5"><!-- chat area -->
  
  <div class="b-example-divider"></div>
  <p class="h1 text-center ">Conversation zone </p>
  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center ms-5">
   
  <a href="/home/chats/new">
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm shadow-lg p-3 mb-5 bg-body-tertiary rounded " style="width: 18rem;">
       <div class="card-body">
         <h5 class="card-title"> Add comment </h5>
         <p class="card-text"> <br>
           </p>
       </div>
       <div class="card-footer">
         <p class="card-text"> <br>
         </p>
       </div>
     </div> </div>
  </a>

    <%  count=0; for( let post of chats){ %>
   <% count++;  if(count>6){ break;}%>
   <div class="col ">     
   <div class="card mb-4 rounded-3 shadow-sm shadow-lg p-3 mb-5 bg-body-tertiary rounded " style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"> <%= post.name %> ( ) </h5>
            <p class="card-text"><%=  post.discription %> <br>
              </p>
          </div>
          <div class="card-footer">
            <p class="card-text"><%=  post.date %> <br>
            </p>
          </div>
        </div>
    </div>
  
    <% } %>
  
  </div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-primary" type="button"> <a href="/home/chats" style="text-decoration: none; color: white;"> Show more </a> </button>

  </div>


